#!/usr/bin/make -f

pkg := cross-shell
dir := debian/$(pkg)

configure:
	dh_testdir

clean:
	dh_testdir
	#$(MAKE) clean

	rm -f debian/substvars build-stamp debian/files
	rm -rf $(dir)

build: build-stamp configure
build-stamp:
	#$(MAKE)
	touch $@

install: build
	dh_testdir
	dh_testroot

	dh_clean -k
	dh_installdirs

binary-arch: install
	dh_testdir
	dh_testroot

	mkdir -p $(dir)/usr/bin
	mkdir -p $(dir)/etc
	cp cross-shell $(dir)/usr/bin
	cp cross-shell.conf $(dir)/etc
	#$(MAKE) install DESTDIR=$(dir)
	dh_installchangelogs
	
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb
	
binary: binary-arch

.PHONY: configure clean build install binary-arch binary
